[
	{
		"type": "title",
		"title": "Site Styles"
	},
	{
		"type": "subtitle",
		"title": "Colors"
	},
	{
		"var": "primaryColor",
		"type": "color",
		"title": "Primary",
		"groupName": "colors",
		"default": "#0E6B38"
	},
	{
		"type": "colors",
		"title": "Buttons and Links",
		"groupName": "colors",
		"set": [
			{
				"var": "secondaryColor",
				"default": "#E6DDC3"
			},
			{
				"var": "successColor",
				"default": "#E6DDC3"
			},
			{
				"var": "infoColor",
				"default": "#E6DDC3"
			},
			{
				"var": "warningColor",
				"default": "#0E6B38"
			},
			{
				"var": "dangerColor",
				"default": "#0E6B38"
			}
		]
	},
	{
		"type": "subtitle",
		"title": "Fonts"
	},
	{
		"var": "mainFont",
		"default": "Jost"
	},
	{
		"type": "group",
		"rule": ".mbr-fonts-style, [mbr-buttons], [mbr-menu]",
		"title": "Title 1",
		"name": "display-1",
		"set": [
			{
				"type": "font",
				"var": "display1Font",
				"default": "Jost"
			},
			{
				"type": "range",
				"min": 0.4,
				"max": 12,
				"step": 0.2,
				"var": "display1Size",
				"default": 4.6
			}
		]
	},
	{
		"type": "group",
		"rule": ".mbr-fonts-style, [mbr-buttons], [mbr-menu]",
		"title": "Title 2",
		"name": "display-2",
		"set": [
			{
				"type": "font",
				"var": "display2Font",
				"default": "Jost"
			},
			{
				"type": "range",
				"min": 0.4,
				"max": 6,
				"step": 0.2,
				"var": "display2Size",
				"default": 3
			}
		]
	},
	{
		"type": "group",
		"rule": ".mbr-fonts-style, [mbr-buttons], [mbr-menu]",
		"title": "Title 3",
		"name": "display-5",
		"set": [
			{
				"type": "font",
				"var": "display5Font",
				"default": "Jost"
			},
			{
				"type": "range",
				"min": 0.4,
				"max": 2.5,
				"step": 0.2,
				"var": "display5Size",
				"default": 2
			}
		]
	},
	{
		"type": "group",
		"rule": ".mbr-fonts-style, [mbr-buttons], [mbr-menu]",
		"title": "Text",
		"name": "display-7",
		"set": [
			{
				"type": "font",
				"var": "display7Font",
				"default": "Jost"
			},
			{
				"type": "range",
				"min": 0.4,
				"max": 2,
				"step": 0.2,
				"var": "display7Size",
				"default": 1.2
			}
		]
	},
	{
		"type": "group",
		"rule": ".mbr-fonts-style, [mbr-buttons], [mbr-menu]",
		"title": "Menu",
		"name": "display-4",
		"set": [
			{
				"type": "font",
				"var": "display4Font",
				"default": "Jost"
			},
			{
				"type": "range",
				"min": 0.4,
				"max": 2,
				"step": 0.2,
				"var": "display4Size",
				"default": 1.1
			}
		]
	},
	{
		"type": "subtitle",
		"title": "Options"
	},
	{
		"var": "isRoundedButtons",
		"type": "switch",
		"title": "Rounded Buttons",
		"default": false
	},
	{
		"var": "isGhostButtonBorder",
		"type": "switch",
		"title": "Ghost Button Border",
		"default": false
	},
	{
		"var": "underlinedLinks",
		"type": "switch",
		"title": "Underlined Links",
		"default": false
	},
	{
		"var": "isAnimatedOnScroll",
		"type": "switch",
		"title": "Animation on Scroll",
		"default": false
	},
	{
		"var": "isScrollToTopButton",
		"type": "switch",
		"title": "Scroll to Top Button",
		"default": false
	}
]